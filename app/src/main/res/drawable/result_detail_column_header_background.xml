<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/secondaryDarkColor">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDarkColor" />
            <corners android:radius="@dimen/result_detail_column_header_button_radius" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <selector>
            <item android:state_checked="true" android:drawable="@drawable/column_header_checked"/>
            <item android:state_pressed="true" android:drawable="@drawable/column_header_pressed"/>
            <item android:drawable="@drawable/column_header_normal"/>
        </selector>
    </item>
</ripple>
