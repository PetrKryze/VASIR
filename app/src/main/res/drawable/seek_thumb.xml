    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="@dimen/progress_bar_thumb_ring_size"
                android:height="@dimen/progress_bar_thumb_ring_size"/>
            <stroke android:color="@color/seek_bar_thumb_outer"
                android:width="@dimen/progress_bar_thumb_ring_thickness"/>
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <size android:width="@dimen/progress_bar_thumb_line_width"
                android:height="@dimen/progress_bar_thumb_line_height"/>
            <solid android:color="@color/seek_bar_thumb_inner"/>
        </shape>
    </item>
