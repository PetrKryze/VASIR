<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        />

    <FrameLayout
        android:id="@+id/result_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"/>

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar" >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rating_background"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_placeholder"
                android:textSize="25sp"
                android:textAlignment="viewStart"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/header_text_color" />

            <ImageView
                android:id="@+id/check_mark"
                android:layout_width="@dimen/checkmark_landscape_size"
                android:layout_height="@dimen/checkmark_landscape_size"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/header_text"
                android:contentDescription="@string/checkmark"
                android:src="@drawable/ic_done_green"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:text="@string/track_time_placeholder"
                android:textSize="25sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:textColor="@color/player_buttons_text" />

        </RelativeLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/header"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_box"
        android:max="@integer/PROGRESS_BAR_MAX"
        android:minHeight="4dp"
        android:progress="0"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:thumb="@drawable/progress_thumb"
        android:progressDrawable="@drawable/progress_bar"/>

    <LinearLayout
        android:id="@+id/button_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rating_box"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/button_previous"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:text="@string/previous_track"
            android:drawableTop="@drawable/ic_previous"
            android:textColor="@color/player_buttons_text" />

        <Button
            android:id="@+id/button_play_pause"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/button_play_label"
            android:drawableTop="@drawable/ic_play"
            android:textColor="@color/player_buttons_text" />

        <Button
            android:id="@+id/button_next"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:text="@string/next_track"
            android:drawableTop="@drawable/ic_next"
            android:textColor="@color/player_buttons_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rating_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/rating_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rating_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/rating_label_lowest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/rating_label_lowest"
                android:textAlignment="viewStart"
                android:textColor="@color/player_rating_label" />

            <TextView
                android:id="@+id/rating_label_highest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/rating_label_highest"
                android:textAlignment="viewEnd"
                android:textColor="@color/player_rating_label" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/ratingBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:max="100"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:progress="50"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/seek_thumb"
            android:thumbOffset="25dp"
            android:splitTrack="false"/>

    </LinearLayout>

</RelativeLayout>