<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="initial_fragment"
    app:startDestination="@id/welcome_fragment">

    <fragment
        android:id="@+id/rating_fragment"
        android:name="com.petrkryze.vas.RatingFragment"
        android:label="@string/main_title_placeholder"
        tools:layout="@layout/rating_fragment">

        <action
            android:id="@+id/action_rating_fragment_to_result_fragment"
            app:destination="@id/result_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/slide_out"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_rating_fragment_to_helpFragment"
            app:destination="@id/helpFragment"
            app:enterAnim="@anim/fadein"
            app:exitAnim="@anim/fadeout"
            app:popEnterAnim="@anim/fadein"
            app:popExitAnim="@anim/fadeout" />
    </fragment>

    <fragment
        android:id="@+id/result_fragment"
        android:name="com.petrkryze.vas.ResultsFragment"
        android:label="@string/header_saved_ratings_label"
        tools:layout="@layout/result_fragment">

        <argument
            android:name="ratings"
            app:argType="java.util.ArrayList" />
        <action
            android:id="@+id/action_result_fragment_to_resultDetailFragment"
            app:destination="@id/result_detail_fragment"
            app:enterAnim="@anim/slide_sideways"
            app:exitAnim="@anim/slide_back_sideways"
            app:popEnterAnim="@anim/slide_sideways"
            app:popExitAnim="@anim/slide_back_sideways" />
        <action
            android:id="@+id/action_result_fragment_to_helpFragment"
            app:destination="@id/helpFragment"
            app:enterAnim="@anim/fadein"
            app:exitAnim="@anim/fadeout"
            app:popEnterAnim="@anim/fadein"
            app:popExitAnim="@anim/fadeout" />
    </fragment>

    <fragment
        android:id="@+id/result_detail_fragment"
        android:name="com.petrkryze.vas.ResultDetailFragment"
        android:label="@string/header_rating_detail"
        tools:layout="@layout/result_detail_fragment" >

        <action
            android:id="@+id/action_result_detail_fragment_to_helpFragment"
            app:destination="@id/helpFragment"
            app:enterAnim="@anim/fadein"
            app:exitAnim="@anim/fadeout"
            app:popEnterAnim="@anim/fadein"
            app:popExitAnim="@anim/fadeout" />
        <argument
            android:name="rating_result"
            app:argType="com.petrkryze.vas.RatingResult" />

    </fragment>

    <fragment
        android:id="@+id/welcome_fragment"
        android:name="com.petrkryze.vas.WelcomeFragment"
        android:label="@string/VASIR"
        tools:layout="@layout/welcome_fragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_rating_fragment"
            app:destination="@id/rating_fragment"
            app:enterAnim="@anim/fadein"
            app:exitAnim="@anim/fadeout"
            app:popEnterAnim="@anim/fadein"
            app:popExitAnim="@anim/fadeout" />
    </fragment>

    <fragment
        android:id="@+id/helpFragment"
        android:name="com.petrkryze.vas.HelpFragment"
        android:label="help_fragment"
        tools:layout="@layout/help_fragment" >

        <argument
            android:name="context_help"
            app:argType="string"
            />
        <argument
            android:name="title_help"
            app:argType="string"
            />
    </fragment>
</navigation>