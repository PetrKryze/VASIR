<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/welcome_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/welcome_title_image_desc"
                android:src="@drawable/vas_app_welcome_icon_no_background"
                android:background="@color/primaryColor"/>

            <TextView
                android:id="@+id/welcome_title_textview"
                style="@style/TextAppearance.MdcTypographyStyles.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="@string/welcome_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_divider"
                android:alpha="0.3"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/welcome_body_textview2"
                style="@style/TextAppearance.MdcTypographyStyles.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/welcome_message"
                android:justificationMode="inter_word"/>

            <CheckBox
                android:id="@+id/welcome_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/welcome_checkbox_do_not_show_again"
                style="@style/TextAppearance.MdcTypographyStyles.Caption"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/welcome_start_button"
                style="@style/TextAppearance.MdcTypographyStyles.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:textColor="@color/primaryTextOnPrimary"
                android:text="@string/welcome_button_continue_label"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_divider"
                android:alpha="0.3"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/welcome_body_textview"
                style="@style/TextAppearance.MdcTypographyStyles.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message_further_info"
                android:gravity="left"
                android:justificationMode="inter_word" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>