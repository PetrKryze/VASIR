<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/result_list_window"
    android:name="com.petrkryze.vas.ResultFragment"
    tools:context=".ResultFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_container_background"
    android:layout_margin="20dp"
    >

    <TextView
        android:id="@+id/result_list_window_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_container_header_background"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/header_saved_ratings_label"
        android:textSize="30sp"
        android:textColor="@color/list_window_header_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/results_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"

        android:layout_below="@+id/result_list_window_header"
        android:layout_above="@id/window_button_close"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="20dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_result_list_row" />

    <Button
        android:id="@+id/window_button_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_close_label"
        android:textSize="20sp"
        android:textColor="@color/list_window_button_text"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/list_window_button_background"
        />
</RelativeLayout>
