<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/result_fragment_layout"
    android:name="com.petrkryze.vas.ResultFragment"
    tools:context=".ResultsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background"
    android:padding="10dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/results_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_above="@id/button_results_share_all"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="40dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/result_fragment_result_list_row" />

    <Button
        android:id="@+id/button_results_share_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_share_all_label"
        android:textSize="20sp"
        android:textColor="@color/list_window_button_text"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"

        android:backgroundTint="@color/list_window_button_background"
        />
</RelativeLayout>
