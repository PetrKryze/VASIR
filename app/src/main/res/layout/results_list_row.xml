<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_list_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingVertical="7dp">

    <TextView
        android:id="@+id/result_list_row_number"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:text="@string/placeholder_number"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/result_list_row_divider"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@color/primaryTextColor"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_list_row_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_list_row_sessionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:text="@string/placeholder"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_list_row_divider"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_list_row_time"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:alpha="0.6"
        android:text="@string/placeholder"
        android:textColor="@color/primaryTextColor"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_list_row_date"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:alpha="0.6"
        android:text="@string/placeholder"
        android:textColor="@color/primaryTextColor"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_list_row_time" />

